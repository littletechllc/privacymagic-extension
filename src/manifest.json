{
  "manifest_version": 3,
  "name": "Privacy Magic",
  "description": "__MSG_extensionDescription__",
  "version": "0.0.1",
  "default_locale": "en",
  "icons": {
    "16": "logo/logo-16.png",
    "32": "logo/logo-32.png",
    "48": "logo/logo-48.png",
    "128": "logo/logo-128.png"
  },
  "options_page": "privacymagic/options.html",
  "side_panel": {
    "default_path": "privacymagic/sidepanel.html"
  },
  "action": {
    "default_title": "Privacy Magic",
    "default_popup": "default_popup/popup.html",
    "default_icon": {
      "16": "logo/logo-16.png",
      "32": "logo/logo-32.png",
      "48": "logo/logo-48.png",
      "128": "logo/logo-128.png"
    }
  },
  "permissions": [
    "browsingData",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "favicon",
    "privacy",
    "scripting",
    "sidePanel",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules/easylist.json"
      }
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content_scripts/youtube.js"
      ],
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*"
      ],
      "all_frames": false,
      "match_about_blank": true,
      "match_origin_as_fallback": true,
      "run_at": "document_end",
      "world": "MAIN"
    },
    {
      "js": [
        "content_scripts/main.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "match_origin_as_fallback": true,
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "js": [
        "content_scripts/isolated.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "match_origin_as_fallback": true,
      "run_at": "document_start",
      "world": "ISOLATED"
    }
  ]
}
