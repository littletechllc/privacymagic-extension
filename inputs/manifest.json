{
    "manifest_version": 3,
    "name": "PrivacyMagic",
    "description": "Make Chrome as private as possible",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "options_page/settings.html",
    "action": {
        "default_title": "PrivacyMagic",
        "default_popup": "default_popup/popup.html"
    },
    "permissions": [
        "declarativeNetRequest",
        "privacy"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
      "service_worker": "background/service-worker.js",
      "type": "module"
    },
    "declarative_net_request" : {
        "rule_resources" : [{
          "id": "easylist_ruleset",
          "enabled": true,
          "path": "rules/easylist.json"
        }]
      },
    "content_scripts": [{
        "js": ["content_scripts/foreground.js"],
        "matches": ["*://*/*"],
        "all_frames": true,
        "match_about_blank": true,
        "match_origin_as_fallback": true,
        "run_at": "document_start",
        "world": "MAIN"
    }]
}
