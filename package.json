{
  "name": "privacymagic",
  "version": "0.0.1",
  "description": "a browser extension that protects your privacy online",
  "main": "index.js",
  "scripts": {
    "lint": "semistandard",
    "format": "semistandard --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "NODE_ENV=production rollup -c && web-ext build --source-dir dist --overwrite-dest",
    "dev": "concurrently \"NODE_ENV=development rollup -c --watch\" \"web-ext run -t chromium --source-dir dist\""
  },
  "author": "Arthur Edelstein",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@types/chrome": "^0.1.31",
    "concurrently": "^9.2.1",
    "rollup-plugin-copy": "^3.5.0",
    "semistandard": "^17.0.0",
    "web-ext": "^9.2.0"
  },
  "semistandard": {
    "ignore": [
      "dist/**"
    ]
  },
  "dependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.53.2"
  }
}
