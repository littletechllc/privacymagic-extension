{
  "name": "privacymagic",
  "version": "0.0.1",
  "description": "a browser extension that protects your privacy online",
  "main": "index.js",
  "scripts": {
    "lint": "semistandard",
    "format": "semistandard --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "NODE_ENV=production rollup -c",
    "build:watch": "NODE_ENV=development rollup -c --watch",
    "dev": "NODE_ENV=development rollup -c --watch"
  },
  "author": "Arthur Edelstein",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "devDependencies": {
    "semistandard": "^17.0.0"
  },
  "semistandard": {
    "ignore": [
      "extension/thirdparty/**",
      "extension/content_scripts/sublevel/**",
      "extension/content_scripts/toplevel/**"
    ]
  },
  "dependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "acorn": "^8.15.0",
    "esquery": "^1.6.0",
    "rollup": "^4.53.2"
  }
}
