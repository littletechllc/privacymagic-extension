{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@tools/*": ["./tools/*"],
      "@test/*": ["./test/*"]
    },
    "checkJs": true,
    "noEmit": true,
    "lib": ["ES2021", "dom", "webworker"],
    "types": ["chrome", "node"],
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["./src/**/*", "./tools/**/*", "*.config.js", "./test/**/*"]
}